<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
   package="com.diggit.app"
   android:versionCode="1"
   android:versionName="1.0">

   <uses-sdk android:minSdkVersion="19" />
   <uses-permission android:name="android.permission.INTERNET" />
   <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
   <uses-permission android:name="android.permission.CAMERA" />
   <uses-permission android:name="android.permission.READ_CONTACTS" />

   <uses-feature android:name="android.hardware.camera" />
   <uses-feature android:name="android.hardware.camera.autofocus" />
   <application
      android:icon="@drawable/ic_launcher"
      android:label="@string/app_name"
      android:largeHeap="true">
      <activity
         android:name="com.diggit.app.activities.LaunchActivity"
         android:label="@string/app_name"
          android:theme="@style/NoActionBar"
          android:screenOrientation="portrait">
         <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
         </intent-filter>
      </activity>
      <activity android:name="com.diggit.app.activities.LoginActivity"
          android:theme="@style/NoActionBar"
          android:screenOrientation="portrait"/>
      <activity android:name="com.diggit.app.activities.SelectImageActivity"
          android:theme="@style/NoActionBar"
          android:screenOrientation="portrait"/>
      <activity android:name="com.diggit.app.activities.StudentCardActivity"
          android:theme="@style/NoActionBar"
          android:screenOrientation="portrait"/>
      <activity android:name="com.diggit.app.activities.BowntyActivity"
          android:theme="@style/NoActionBar"
          android:screenOrientation="portrait"/>
   </application>
</manifest>
